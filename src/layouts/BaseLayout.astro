---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const {
  title = 'Majid Babaeifar - Full Stack Software Engineer',
  description = 'Personal blog of Majid Babaeifar, a full-stack software engineer with 7+ years of experience building scalable applications.',
  image = '/og-image.jpg',
  article = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={article ? 'article' : 'website'} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.url)} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="min-h-screen flex flex-col">
    <header class="border-b border-[var(--color-border)] py-6">
      <nav class="max-w-3xl mx-auto px-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold hover:no-underline">Majid Babaeifar</a>
          <div class="flex gap-6">
            <a href="/" class="hover:text-[var(--color-accent)]">Home</a>
            <a href="/about" class="hover:text-[var(--color-accent)]">About</a>
            <a href="/contact" class="hover:text-[var(--color-accent)]">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="border-t border-[var(--color-border)] py-8 mt-16">
      <div class="max-w-3xl mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-[var(--color-text-light)]">
          <p>&copy; {new Date().getFullYear()} Majid Babaeifar. All rights reserved.</p>
          <div class="flex gap-6">
            <a href="https://github.com/majidbabaeifar" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-accent)]">GitHub</a>
            <a href="https://linkedin.com/in/majidbabaeifar" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-accent)]">LinkedIn</a>
            <a href="mailto:majidbabaeifar@gmail.com" class="hover:text-[var(--color-accent)]">Email</a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>

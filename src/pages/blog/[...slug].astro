---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date helper
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={entry.data.title} description={entry.data.description} article={true}>
  <article class="max-w-3xl mx-auto px-6 py-12">
    <header class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{entry.data.title}</h1>
      <div class="flex items-center gap-4 text-[var(--color-text-light)] text-sm">
        <time datetime={entry.data.pubDate.toISOString()}>
          {formatDate(entry.data.pubDate)}
        </time>
        {
          entry.data.tags && entry.data.tags.length > 0 && (
            <div class="flex gap-2">
              {entry.data.tags.map((tag) => (
                <span class="px-2 py-1 bg-[var(--color-bg-secondary)] rounded text-xs">{tag}</span>
              ))}
            </div>
          )
        }
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <footer class="mt-16 pt-8 border-t border-[var(--color-border)]">
      <a href="/" class="text-[var(--color-accent)] hover:underline inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to all posts
      </a>
    </footer>
  </article>
</BaseLayout>

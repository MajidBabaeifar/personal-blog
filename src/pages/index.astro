---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout currentPage="home">
  <div class="max-w-3xl mx-auto px-6 py-12">
    <section class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Welcome</h1>
      <p class="text-xl text-[var(--color-text-light)] leading-relaxed">
        Thanks for visiting my personal website. Feel free to check out the About page to learn more about me,
        or reach out via the Contact page.
      </p>
    </section>
  </div>
</BaseLayout>
